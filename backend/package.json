{
  "name": "dmb",
  "version": "0.8.0",
  "description": "",
  "author": "Aki",
  "license": "ISC",
  "main": "dist/backend.js",
  "scripts": {
    "start": "npm run build && pm2 start pm2config.json --env production && pm2 save",
    "stop": "pm2 list && pm2 stop backend",
    "daemonize": "pm2 startup",
    "log": "pm2 log backend --lines 250",
    "build": "rm -rf dist && rm -rf bin && tsc && tscp && cp -rf src/public dist/public",
    "debug": "npm run kill ; cross-env NODE_ENV=development nodemon",
    "kill": "pkill -f '(swc-node.+backend)'",
    "init": "swc-node src/utils/app_init.ts && npx prisma generate && swc-node src/utils/db_init.ts",
    "migrate": "npx prisma generate && swc-node src/utils/db_migrate.ts",
    "sync": "npx prisma generate && swc-node src/utils/db_sync.ts",
    "sync_force": "npx prisma generate && swc-node src/utils/db_sync_force_reset.ts",
    "gui": "swc-node src/utils/db_gui.ts",
    "init_mongo": "swc-node src/destroy.ts",
    "deploy": "run-script-os",
    "deploy:nix": "rm -f bin/*;tsc && tscp && pkg dist/backend.js --out-path bin --targets node16-linux-x64",
    "deploy:macos": "rm -f bin/*;tsc && tscp && pkg dist/backend.js --out-path bin --targets node16-macos-x64",
    "deploy_arm": "run-script-os",
    "deploy_arm:nix": "rm -f bin/*;tsc && tscp && pkg dist/backend.js --out-path bin --targets node16-linux-arm64",
    "deploy_arm:macos": "rm -f bin/*;tsc && tscp && pkg dist/backend.js --out-path bin --targets node16-macos-arm64",
    "test": "rm -rf dist && jest --clearCache && jest --watchAll --verbose --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "connect-memcached": "^2.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-ws": "^5.0.2",
    "isomorphic-fetch": "^3.0.0",
    "morgan": "^1.10.0",
    "node-pty": "^1.0.0",
    "nodemailer": "^6.9.8",
    "readline": "^1.3.0",
    "rotating-file-stream": "^3.2.1",
    "showdown": "^2.1.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@swc-node/jest": "^1.6.8",
    "@swc-node/register": "^1.6.8",
    "@swc/core": "^1.3.100",
    "@swc/helpers": "^0.5.3",
    "@swc/wasm": "^1.3.100",
    "@types/connect-livereload": "^0.6.3",
    "@types/connect-memcached": "^1.0.3",
    "@types/cors": "^2.8.17",
    "@types/express-session": "^1.17.10",
    "@types/express-ws": "^3.0.4",
    "@types/isomorphic-fetch": "^0.0.39",
    "@types/livereload": "^0.9.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.3",
    "@types/nodemailer": "^6.4.14",
    "@types/showdown": "^2.0.6",
    "connect-livereload": "^0.6.1",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "livereload": "^0.9.3",
    "run-script-os": "^1.1.6",
    "typescript": "^5.3.3",
    "typescript-cp": "^0.1.9"
  }
}
